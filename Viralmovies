        function openMovie(name) {
            tg.showPopup({
                title: 'Play Movie',
                message: 'Do you want to watch ' + name + ' on @viralmovies_hd?',
                buttons: [{type: 'ok', text: 'Watch'}, {type: 'cancel'}]
